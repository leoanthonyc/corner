<div class="p-3">
  <h1>Links</h1>

  <h3>Recent</h3>
  <ul>
    <% @recent_links.each do |link| %>
      <li><%= link_to link.title, link %></li>
    <% end %>
  </ul>

  <%= link_to 'All', links_path %>
  <% @tags.each do |tag| %>
    <%= link_to tag.name, links_path(tag: tag.name) %>
  <% end %>
  <ul>
    <% @links.each do |link| %>
      <li><%= link_to link.title, link %></li>
    <% end %>
  </ul>

  <%= link_to 'New Link', new_link_path, class: 'btn btn-primary' %>
</div>
