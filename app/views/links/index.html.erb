<div>
  <h1>Links</h1>

  <h3>Recent</h3>
  <ul>
    <% @recent_links.each do |link| %>
      <li>
        <%= link_to link.title, link, class: 'text-dark' %>
        <%= link_to link.url, class: 'text-muted', target: '_href' do %>
          <i class="bi bi-box-arrow-up-right"></i>
        <% end %>
      </li>
    <% end %>
  </ul>

  <%= link_to 'All', links_path, class: 'text-dark' %>
  <% @tags.each do |tag| %>
    <%= link_to tag.name, links_path(tag: tag.name), class: 'text-dark' %>
  <% end %>
  <ul>
    <% @links.each do |link| %>
      <li>
        <%= link_to link.title, link, class: 'text-dark' %>
        <%= link_to link.url, class: 'text-muted', target: '_href' do %>
          <i class="bi bi-box-arrow-up-right"></i>
        <% end %>
      </li>
    <% end %>
  </ul>

  <%= link_to new_link_path, class: 'btn btn-primary' do %>
    <i class="bi bi-plus-lg"></i>
    New Link
  <% end %>
</div>
